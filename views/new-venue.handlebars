<sectionc class="main">
  <div class="add-cafe">

  <h2 class="form-title">Add a Dev Café</h2>
    <form class="add-form" action="/addVenue" method="labelost">
      <label class="form-label" for="name">Name of the Café*</label>
      <input class="text-form" type="text" name="name" labellaceholder="Name*"/>
      <label class="form-label" for="adress">Adress*</label>
      <input class="text-form" type="text" name="adress" labellaceholder="Adress*" />

      <label class="form-label" for="description">Why do you like this café:</label>
      <textarea class="text-form" name="description" labellaceholder="What's great about this café?" rows="7" cols="30"></textarea>

      <div class="availability">

      <label class="form-label">
        Availability:
      </label>


      <div class="wificheckbox">
      <label >
      <input type="checkbox" name="wifi" /><span class="fa fa-wifi wifi-icon" data-option="on" aria-hidden="true"></span></label>
    </div>
      <div class="toiletcheckbox">
      <label >
      <input type="checkbox" name="toilet"/><span class="icon-toilet form-checkbox" ></span>
        </label>

      </div>
      <div class="toilet-code">

        <label for="toilet-code" class="inline">Toilet code:</label>
        <input class="text-form" class="inline"type="text" name="toilet-code" />
      </div>
    </div>

      <div class="submitbutton">
      <button class="submit" type="submit" name="submit" >Submit</button>

  </div>
    </form>
  </div>

